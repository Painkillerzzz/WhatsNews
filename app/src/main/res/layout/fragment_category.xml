    <HorizontalScrollView
        android:id="@+id/category_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/date_bar">

        <!-- 类别选择栏 (使用RadioGroup和RadioButton) -->
        <RadioGroup
            android:id="@+id/categoryRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/allRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部" />

            <RadioButton
                android:id="@+id/entertainmentRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="娱乐" />

            <RadioButton
                android:id="@+id/militaryRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="军事" />

            <RadioButton
                android:id="@+id/educationRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="教育" />

            <RadioButton
                android:id="@+id/cultureRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="文化" />

            <RadioButton
                android:id="@+id/healthRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="健康" />

            <RadioButton
                android:id="@+id/financeRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="财经" />

            <RadioButton
                android:id="@+id/sportsRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体育" />

            <RadioButton
                android:id="@+id/vihecleRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="汽车" />

            <RadioButton
                android:id="@+id/technologyRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="科技" />

            <RadioButton
                android:id="@+id/societyRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="社会" />

        </RadioGroup>

    </HorizontalScrollView>

    <Button
        android:id="@+id/searchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/category_scrollview"
        android:text="Search"/>

    <!-- 选择栏下的 RecyclerView (用于显示新闻) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
